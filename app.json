{
  "expo": {
    "name": "todo-list",
    "slug": "todo-list",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/todoicon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/todoicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": ["expo-speech-recognition"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dave840.todolist",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record voice for task entry.",
        "NSSpeechRecognitionUsageDescription": "Speech recognition is used to transcribe tasks from your voice."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/todoicon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["RECORD_AUDIO"],

      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.dave840.todolist"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "886ee38c-89a4-40e8-890e-9b23b7e6b6bb"
      }
    }
  }
}
